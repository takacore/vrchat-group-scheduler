{
    "manifest_version": 3,
    "name": "VRChat Group Scheduler",
    "version": "2.0.0",
    "description": "Schedule and automate group announcements on VRChat.",
    "permissions": [
        "storage",
        "alarms",
        "cookies",
        "notifications",
        "scripting",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://api.vrchat.cloud/*",
        "https://vrchat.com/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "VRChat Group Scheduler"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}